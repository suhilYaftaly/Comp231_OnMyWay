<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suhail.onmyway.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchImgBtnMain"
        android:onClick="searchIconMain"
        android:src="@drawable/ic_search"
        android:background="?android:selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addImgBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?android:selectableItemBackground"
        android:onClick="addButtonClicked"
        android:src="@drawable/ic_add" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtImgBtn"
        android:background="?android:selectableItemBackground"
        android:onClick="editItemMain"
        android:src="@drawable/ic_edit"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/addImgBtn"
        android:layout_toEndOf="@+id/addImgBtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteImgBtn"
        android:background="?android:selectableItemBackground"
        android:onClick="deleteItemMain"
        android:src="@drawable/ic_delete"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myLocationImgBtnMain"
        android:background="?android:selectableItemBackground"
        android:onClick="myLocationMain"
        android:src="@drawable/ic_my_location"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/deleteImgBtn"
        android:layout_toEndOf="@+id/deleteImgBtn"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        style="@style/AppTheme.PopupOverlay"
        android:clickable="true"
        android:focusable="true"
        android:background="#9ae0f2" />
</RelativeLayout>
